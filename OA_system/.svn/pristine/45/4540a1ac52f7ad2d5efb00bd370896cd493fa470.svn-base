    </trim>
  </insert>
  <update id="updateByPrimaryKeySelective" parameterType="com.bean.User">
    update user
    <set>
      <if test="loginname != null">
        loginName = #{loginname,jdbcType=VARCHAR},
      </if>
      <if test="password != null">
        password = #{password,jdbcType=VARCHAR},
